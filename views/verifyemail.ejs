<!-- Wappler include head-page="layouts/main" jquery_slim_33="cdn" fontawesome_4="cdn" bootstrap4="superhero" is="dmx-app" id="verifyemail" appConnect="local" -->
<meta name="ac:route" content="/verifyemail">
<div is="dmx-bs4-toasts" id="toasts_verify"></div>
<div class="d-flex useh100 loginbgimg align-items-center justify-content-center flex-column">
    <section>

        <div class="container homebox">
            <div class="row justify-content-center p-3">
                <div class="col regbox p-3">
                    <div class="row">
                        <div class="col text-center"><img src="/images/cocktail-white.svg" width="200">
                            <h2 class="mb-3 text-center mt-3">Verify your email</h2>
                        </div>
                    </div>
                    <form id="form_verify" is="dmx-api-form" method="post" action="/api/Security/emailverify" post-data="json" dmx-on:start="preloader1.show()" dmx-on:done="preloader1.hide()"
                        dmx-on:error="toasts_verify.show({message: 'Your email and pin does not match', title: 'Error'})"
                        dmx-on:success="user.set('email',data.email);user.set('firstname',data.firstname);user.set('jwt',data.jwt);user.set('role',data.role);browser_home.goto('/home')">
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input type="text" class="form-control" id="email" name="email" aria-describedby="input1_help">
                            <small id="input1_help2" class="form-text">Please use a valid e-mail address</small>
                        </div>
                        <div class="form-group">
                            <label for="pin">Verification Pin</label>
                            <input type="text" class="form-control" id="pin" name="verificationcode" aria-describedby="input1_help">
                        </div>
                        <button id="btn_proceed" class="btn btn-block btn-primary" type="submit">Verify Email</button>
                        <button id="btn_register" class="btn btn-block btn-light" dmx-on:click="browser_home.goto('/register_confirm')">Cancel</button>
                    </form>
                </div>
                <div class="regbox pb-3 pt-3">




                </div>
            </div>
        </div>
    </section>
</div>