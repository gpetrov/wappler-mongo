[
  {
    "name": "exec",
    "module": "core",
    "action": "exec",
    "options": {
      "exec": "secure"
    },
    "output": false
  },
  {
    "name": "",
    "module": "core",
    "action": "condition",
    "options": {
      "if": "{{exec.userdetails.role == 'Admin'}}",
      "then": {
        "steps": [
          {
            "name": "getusers",
            "module": "mongo_find",
            "action": "mongo_find",
            "options": {
              "database": "jams",
              "collection": "users",
              "projection": "{ \"password\": 0 }",
              "querytype": "find",
              "inboundtype": "JSON"
            },
            "meta": [
              {
                "name": "_id",
                "type": "string"
              }
            ],
            "output": false
          },
          {
            "name": "sendusers",
            "module": "return_json",
            "action": "return_json",
            "options": {
              "usemethod": "toclient",
              "usestatus": 200,
              "pass": "in",
              "inbound": "{{getusers}}"
            },
            "meta": [
              {
                "name": "json",
                "type": "object"
              }
            ]
          }
        ]
      },
      "else": {
        "steps": {
          "name": "noauth",
          "module": "return_json",
          "action": "return_json",
          "options": {
            "usemethod": "toclient",
            "usestatus": 401,
            "pass": "simple",
            "usename": "message",
            "inbound": "Not Authorised"
          },
          "meta": [
            {
              "name": "json",
              "type": "object"
            }
          ]
        }
      }
    },
    "outputType": "boolean"
  }
]